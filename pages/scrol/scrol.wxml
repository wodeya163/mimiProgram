<!--pages/scrol/scrol.wxml-->
<!--scroll水平滚动-->
<view>
   <scroll-view class="container1" scroll-x>
       <view class="item1" wx:for="{{10}}" wx:key="index">{{item}}
       </view>
   </scroll-view>
<!--垂直滚动-->
   <scroll-view class="container2" scroll-y>
       <view class="item2" wx:for="{{10}}" wx:key="index">{{item}}
       </view>
   </scroll-view>
<!--局部滚动-->
   <scroll-view class="container2" scroll-y bindscroll="hangdScroll">
       <view class="item2" wx:for="{{10}}" wx:key="index">{{item}}
       </view>
   </scroll-view>
</view>